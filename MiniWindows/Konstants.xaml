<Window x:Class="Prog3.MiniWindows.Konstants"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Prog3.MiniWindows"
        mc:Ignorable="d"
        Title="Новые данные"  Height="663" Width="483" materialDesign:ColorZoneAssist.Mode="PrimaryLight"
ResizeMode="NoResize"
WindowStyle="None"
Background="Transparent"
AllowsTransparency="True" WindowStartupLocation="CenterScreen">


    <Border Background="White" Margin="15,15,15,15"
                CornerRadius="15" 
                Padding="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="#FF76C803" ShadowDepth="0"></DropShadowEffect>
        </Border.Effect>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Border Background="#4CAF50" Margin="5"
            CornerRadius="15" 
            Padding="10">

                    <TextBlock Text="Константы" VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Margin="10" FontSize="24" FontWeight="Bold" FontFamily="Yu Gothic UI" Foreground="White"/>

                </Border>
            </StackPanel>
            <!-- Кнопка Exit -->
            <Button x:Name="ExitButton" Content="×"  
HorizontalAlignment="Right" VerticalAlignment="Top"
FontSize="30" FontWeight="Bold" 
Background="Transparent" BorderBrush="Transparent"
Foreground="Red" Margin="0,-14,-15,0"
Click="ExitButton_Click" Height="39" Width="50"/>


            <Grid Grid.Row="1" Margin="0,10,0,126" Loaded="Grid_Loaded">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Плотности тока" Grid.Row="0" Grid.ColumnSpan="4" VerticalAlignment="Center" Margin="5" 
           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Center"/>
                

                



                <Label Content="Icu1" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" 
                           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Icu2" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" 
           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Icu3" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" 
           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Icu4" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" 
           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Icu5" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5" 
           FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>





                <TextBox x:Name="icu1" Grid.Row="2" Grid.Column="1" Margin="5" Height="30" Padding="3" 
             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="icu2" Grid.Row="3" Grid.Column="1" Margin="5" Height="30" Padding="3" 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="icu3" Grid.Row="4" Grid.Column="1" Margin="5" Height="30" Padding="3" 
             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="icu4" Grid.Row="5" Grid.Column="1" Margin="5" Height="30" Padding="3" 
             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="icu5" Grid.Row="6" Grid.Column="1" Margin="5" Height="30" Padding="3" 
             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>



                <Label Content="Isn1" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="5" 
                FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Isn2" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Резерв" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Center"/>
                <Label Content="Icu6" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="Icu7" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>





                <TextBox x:Name="isn1" Grid.Row="2" Grid.Column="3" Margin="5" Height="30" Padding="3" 
  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="isn2" Grid.Row="3" Grid.Column="3" Margin="5" Height="30" Padding="3" 
                  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


                <TextBox x:Name="icu6" Grid.Row="5" Grid.Column="3" Margin="5" Height="30" Padding="3" 
  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="icu7" Grid.Row="6" Grid.Column="3" Margin="5" Height="30" Padding="3" 
  Style="{StaticResource MaterialDesignOutlinedTextBox}"/>


                <Label Content="Площадь пластин" Grid.Row="8" Grid.ColumnSpan="4" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Center"/>



                <Label Content="Sпл" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>
                <Label Content="2Sпл" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5" 
FontSize="15" FontWeight="Bold" FontFamily="Yu Gothic UI" HorizontalAlignment="Right"/>

                <TextBox x:Name="spl" Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Height="30" Padding="3" 
Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <TextBox x:Name="spl2" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Height="30" Padding="3" 
Style="{StaticResource MaterialDesignOutlinedTextBox}"/>




                <Button Content="Сохранить" Grid.Row="13" Grid.ColumnSpan="4" Margin="5" Background="#4CAF50" BorderBrush="#FF85E600" Foreground="#DDFFFFFF" Click="SaveNewKonstants"/>


            </Grid>
        </Grid>
    </Border>

</Window>

